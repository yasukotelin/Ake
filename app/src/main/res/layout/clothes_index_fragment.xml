<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:context=".ui.main.ClothesIndexFragment"
                                             android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/clothes_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:textColor="@color/cardview_dark_background"/>
            <ImageView
                    android:src="@drawable/ic_launcher_background"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/clothes_index_fragment_img_today"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="16dp"/>
            <TextView
                    android:text="@string/today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    app:layout_constraintTop_toTopOf="@+id/clothes_index_fragment_img_today"
                    app:layout_constraintStart_toEndOf="@+id/clothes_index_fragment_img_today" android:layout_marginStart="8dp"/>
            <TextView
                    tools:text="30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clothes_index_fragment_txv_index_today" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/textView3" android:textSize="24sp"
                    android:textColor="@android:color/black" android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/clothes_index_fragment_img_today"/>
            <TextView
                    tools:text="コートを着ないと結構寒いなぁ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clothes_index_fragment_txv_message_today"
                    app:layout_constraintStart_toEndOf="@+id/clothes_index_fragment_txv_index_today"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@+id/clothes_index_fragment_txv_index_today"
                    app:layout_constraintBottom_toBottomOf="@+id/clothes_index_fragment_txv_index_today"
                    android:textColor="@android:color/black"/>
            <ImageView
                    android:src="@drawable/ic_launcher_background"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/clothes_index_fragment_img_tomorrow" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/clothes_index_fragment_img_today" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="@string/tomorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    app:layout_constraintTop_toTopOf="@+id/clothes_index_fragment_img_tomorrow"
                    app:layout_constraintStart_toEndOf="@+id/clothes_index_fragment_img_tomorrow" android:layout_marginStart="8dp"/>
            <TextView
                    tools:text="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clothes_index_fragment_txv_index_tomorrow" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="@+id/textView4" android:textSize="24sp"
                    android:textColor="@android:color/black" android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/clothes_index_fragment_img_tomorrow"/>
            <TextView
                    tools:text="薄手のカーディガンが欲しいな"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clothes_index_fragment_txv_message_tomorrow"
                    app:layout_constraintTop_toTopOf="@+id/clothes_index_fragment_txv_index_tomorrow"
                    app:layout_constraintBottom_toBottomOf="@+id/clothes_index_fragment_txv_index_tomorrow"
                    app:layout_constraintStart_toEndOf="@+id/clothes_index_fragment_txv_index_tomorrow"
                    android:layout_marginStart="16dp" android:textColor="@android:color/black"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>